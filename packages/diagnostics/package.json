{
    "name": "awsm-renderer",
    "version": "0.1.0",
    "license": "(MIT OR Apache-2.0)",
    "scripts": {
        "serve:release:sanity": "npm-run-all --parallel trunk:serve:release bridge:release:sanity",
        "serve:release:performance": "npm-run-all --parallel trunk:serve:release bridge:release:performance",
        "serve:dev:sanity": "npm-run-all --parallel trunk:serve:dev bridge:dev:sanity",
        "serve:dev:performance": "npm-run-all --parallel trunk:serve:dev bridge:dev:performance",
        "trunk:serve:dev": "cross-env RUSTFLAGS=--cfg=web_sys_unstable_apis trunk serve --features dev --watch . --watch ../msg",
        "trunk:serve:release": "cross-env RUSTFLAGS=--cfg=web_sys_unstable_apis trunk serve --release --watch . --watch ../msg",
        "bridge:release:sanity": "cd ../perps-exes/ && cargo run --bin perps-bridge --features sanity --release",
        "bridge:release:performance": "cd ../perps-exes/ && cargo run --bin perps-bridge --release",
        "bridge:dev:sanity": "cd ../perps-exes/ && cargo run --bin perps-bridge --features sanity",
        "bridge:dev:performance": "cd ../perps-exes/ && cargo run --bin perps-bridge"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.13",
        "cross-env": "^7.0.3",
        "cssnano": "^5.1.14",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.21",
        "postcss-cli": "^10.1.0",
        "postcss-import": "^15.1.0",
        "postcss-reporter": "^7.0.5",
        "postcss-url": "^10.1.3",
        "tailwindcss": "^3.2.4"
    }
}
